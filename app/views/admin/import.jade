extends ../layout

block title
	title=book.title
block content
	form.fs-12(action="/admin/import/#{type}", method="POST")
		div.form-group
			label(for="q") 关键字
			input.form-control#q.fs-12(type="text", name="q", placeholder="请输入关键字", value=name)
		div.form-group
			label(for="start") 开始条数
			input.form-control#start.fs-12(type="text", name="start", placeholder="请输入开始条数", value=author)
		div.form-group
			label(for="count") 结果条数
			input.form-control#count.fs-12(type="text", name="count",  placeholder="请输入结果条数", value=publisher)
		div.tr
			button.btn.vbook-btn-primary(type="submit") 保存